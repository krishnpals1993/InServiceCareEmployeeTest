@model IEnumerable<EmployeeTest.Models.TestViewModel>
@{
    ViewData["Title"] = "Exam";
    var Status = ViewBag.Status;
}
@using Microsoft.Extensions.Options;
@inject IOptions<Appsettings> Settings

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h3>Exam</h3>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="tbl">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @if (item.Status == "Start")
                                        {
                                            @Html.ActionLink("Start", "Start", "Test", new { TestId = item.Id }, new { @class = "btn btn-primary btn-xs" })
                                        }
                                        else @if (item.Status == "Resume")
                                   {
                                    @Html.ActionLink("Resume", "Resume", "Test", new { TestId = item.Id }, new { @class = "btn btn-primary btn-xs" })
                                }
                                else @if (item.Status == "Completed")
                       {
                        <label class="label label-info" style="font-size:13px;">You have completed test</label>
                    }
                    else
                    {
                        
                        @Html.ActionLink("Watch videos completely to start test", "Videos", "Test", new { }, new { @class = "" })
                    }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
        <link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    </environment>

    <script type="text/javascript">
    </script>
}