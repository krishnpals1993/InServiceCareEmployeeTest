@model IEnumerable<EmployeeTest.Models.EmployeeViewModel>

<table class="table table-striped table-bordered table-hover dataTables-example" style="width:100%" id="tbl">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>
            <th>
                Last Name
            </th>

            <th>
                Email
            </th>
            <th>
                Employee No
            </th>
            <th>
                Hr Group
            </th>
            <th>
                Test Status
            </th>
            <th>Exam Date</th>
            <th style="min-width: 180px;">Action</th>
            <th>Video (Time)</th>
            <th style="display:none"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HrGroupName)
                </td>
                <td>
                    @Html.ActionLink("" + item.PassedTest + " of " + @item.Totaltest + " passed", "ViewTest", "CareGiver", new { id = item.EmployeeId }, new { @class = " ", style = " " })
                </td>
                <td class="">
                    @if (item.ExamDate != null)
                    {
                        <span>@item.ExamDate.Value.ToString("MM/dd/yyyy")</span>
                    }
                </td>
                <td style="min-width: 150px;">
                    @if (item.UserId == 0)
                    {
                        @if (item.ValidEmail)
                        {
                            <a href="#" onclick="sendEmail('@item.Email')">Send Registration Link</a>
                        }
                        else
                        {
                            <span class="label label-danger">Invalid Email</span>
                        }
                    }
                    else
                    {
                        <a href="#" onclick="sendEmailLogin('@item.Email')">Send Login Link</a>
                    }


                </td>



                <td class="videoDuration">
                    @Html.DisplayFor(modelItem => item.VideoDuration)
                </td>
                <td style="display:none" class="cUserId">@item.UserId</td>
            </tr>
        }
    </tbody>
</table>

